<div class="container mt-4">
  <div class="row">
    <div class="col-8 mx-auto">

	  <h1>ユーザ情報の編集</h1>

    <div class='mt-3'>
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
       <ul>
         <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
       </ul>
    <% end %>

    <%= form_with model: @user, method: :patch do |user| %>
      <div class="form-group form-inline">
        <label class="col-3 col-form-label">氏名</label>
        <%= user.text_field :last_name %>
        <%= user.text_field :first_name %>
      </div>

      <div class="form-group form-inline">
        <label class="col-3 col-form-label">フリガナ</label>
        <%= user.text_field :last_name_kana %>
        <%= user.text_field :first_name_kana %>
      </div>

      <div class="form-group form-inline">
        <label class="col-3 col-form-label">メールアドレス</label>
          <%= user.email_field :email %>
      </div>

      <div class="form-group form-inline">
        <label class="col-3 col-form-label">社員番号</label>
          <%= user.text_field :employee_id %>
      </div>

      <div class="form-group form-inline">
        <label class="col-3 col-form-label">所属</label>
          <%= user.text_field :affiliation %>
      </div>

      <div class="form-group form-inline">
        <label class="col-3 col-form-label">プロフィール画像</label>
        <%= user.file_field :profile_image , accept: 'image/*' %>
      </div>

      <div class="form-group form-inline">
        <%= user.submit "編集内容を保存", class: 'btn btn-success' %>
      </div>
    <% end %>

      <%= link_to users_check_path do %>
        <div class="btn btn-sm btn-danger">退会する</div>
      <% end %>

    </div>
  </div>
</div>