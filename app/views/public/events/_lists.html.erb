      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>イベント名</th>
          <th>開催日</th>
          <th>時刻</th>
          <th>場所</th>
          <th>主催者</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% events.each do |event| %>
        <tr>
          <td><strong><%= event.recruit %>人</strong>募集</br>（<%= event.joins.count %>人参加）</td>
          <td>
            <%= link_to event_path(event.id) do %>
              <strong><%= event.name %></strong>
            <% end %>
          </td>
          <td><%= event.date %></td>
          <td><%= event.start_at.strftime("%H:%M") %>〜<%= event.end_at.strftime("%H:%M") %></td>
          <td><%= event.location %></td>
          <td>
            <%= link_to user_path(event.user.id) do %>
              <%= event.user.last_name + " " + event.user.first_name %> さん
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
      </table>
