<% if user_signed_in? %>
  <%= link_to new_event_path do %>
  <div class="btn btn-primary rounded-pill btn-lg">
    イベントを主催
    <i class="fas fa-plus fa-1x mx-2"></i>
  </div>
  <% end %>
<% end %>

<div class="mt-3">

<table class="table table-hover table-borderless table-sm">
  <thead class="thead-dark">
    <th>
      <div class="d-flex">
        <font class="mx-auto">ジャンル検索</font>
      </div>
    </th>
   </thead>
 <tbody>
   <td>
     <%= link_to events_path do %>
       <div class="btn btn-secondary d-flex">
         <font color="white" class="mx-auto">ALL</font>
       </div>
     <% end %>
   </td>
     <% genres.each do |genre| %>
       <tr><td>
         <%= link_to genre_path(genre.id) do %>
           <div class="btn btn-secondary d-flex">
             <font color="white" class="mx-auto"><%= genre.name %></font>
           </div>
         <% end %>
       </td></tr>
     <% end %>
  </tbody>
</table>

</div>