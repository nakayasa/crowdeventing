<div class="container">
  <div class='row form-group'>
    <div class="col-10 mt-4">

<table class="table table-hover table-inverse">

  <thead>
    <h2>ユーザ一覧（管理者画面）</h2>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(100,100) %>
        </td>
        <td><%= user.last_name + "　" + user.first_name %></td>
        <td><%= link_to "詳細情報", admin_user_path(user.id) %></td>
        <td>
          <% if user.delete_status? %>
            <div class="text-secondary">退会済</div>
          <% else %>
            <div class="text-success">有効</div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
    </div>
  </div>
</div>